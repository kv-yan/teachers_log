<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/table_item_border"
    android:padding="4dp">

    <TextView
        android:id="@+id/student_name"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Անուն Ազգանուն"
        android:textSize="16sp"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/border_1"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/student_name"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/days_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/border_1"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/border_2"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginStart="7dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/days_layout"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/student_average_grade"
        style="@style/table_edit_text"
        android:layout_width="100dp"
        android:rotation="90"
        android:text="Միջին գնահատական"
        android:singleLine="true"
        android:layout_marginStart="-32.5dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/border_2"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/border_3"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginStart="-25dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/student_average_grade"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/student_marks"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="bottom"
        android:padding="3dp"
        android:singleLine="true"
        android:text="Նշումներ"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/border_3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9" />

    <View
        android:id="@+id/border_4"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginStart="7dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/student_marks"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/student_parents_email"
        android:textSize="16sp"
        android:layout_width="200dp"
        android:text="Ծնողի էլ․ հասցե"
        app:layout_constraintVertical_bias="0.9"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/border_4"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>